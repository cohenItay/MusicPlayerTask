<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- The color displayed most frequently across your appâ€™s screens and components. Used in app bars and buttons.
        This color should pass guidelines for text / iconography when drawn on top of the surface or background color. -->
        <item name="colorPrimary">@color/orange500</item>
        <!-- A tonal variation of the primary color. -->
        <item name="colorPrimaryVariant">@color/orange300</item>
        <!-- darker variation of the primary color -->
        <item name="colorPrimaryDark">@color/orange700</item>
        <!-- A color that passes guidelines for text/iconography when drawn on top of the primary color.  -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- The secondary branding color for the app, usually an accented complement to the primary branding color.
         Used as accents on components, such as FABs and -->
        <item name="colorSecondary">@color/cyan500</item>
        <!-- A tonal variation of the secondary color. -->
        <item name="colorSecondaryVariant">@color/cyan300</item>
        <!-- A color that passes guidelines for text/iconography when drawn on top of the secondary color. -->
        <item name="colorOnSecondary">@color/cyan700</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <item name="android:colorBackground">@color/gray400</item>
        <!-- A color that passes guidelines for text/iconography when drawn on top of the background color. -->
        <item name="colorOnBackground">@color/black</item>
        <!-- Surface colors affect surfaces of components, such as cards, sheets, and menus. -->
        <item name="colorSurface">@color/gray200</item>
        <!-- A color that passes guidelines for text/iconography when drawn on top of the surface color. -->
        <item name="colorOnSurface">@color/black</item>
        <!-- Error color indicates errors states, for components such as text fields -->
        <item name="colorError">@color/red700</item>
        <!-- A color that passes guidelines for text/iconography when drawn on top of the error color. -->
        <item name="colorOnError">@color/white</item>


        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>
</resources>